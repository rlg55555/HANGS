<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CyclicalTimer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/on_green</item>
        <item name="colorPrimaryVariant">@color/start_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/session_gold</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:navigationBarColor">@color/bg</item>
    </style>

    <style name="StepBtn" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/btn_round</item>
    </style>
</resources>
